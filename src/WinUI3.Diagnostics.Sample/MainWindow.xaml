<Window
    x:Class="WinUI3.Diagnostics.Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUI3 Diagnostics Sample" 
    >
    <Grid x:Name="Root">
        <StackPanel Spacing="12" Padding="24">
            <TextBlock Text="Sample UI" FontSize="24" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="PrimaryButton" Content="Primary" />
                <Button Content="Secondary" />
                <TextBox Width="200" PlaceholderText="Type here"/>
            </StackPanel>
            <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}" Height="120" />
        </StackPanel>
    </Grid>
</Window>
