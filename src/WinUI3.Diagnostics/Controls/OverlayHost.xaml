<UserControl
    x:Class="WinUI3.Diagnostics.Controls.OverlayHost"
    x:Name="Self"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:WinUI3.Diagnostics"
    xmlns:controls1="using:WinUI3.Diagnostics.Controls">
    <Grid x:Name="Root" Visibility="Collapsed" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: Visual tree -->
        <StackPanel Grid.Column="0" Background="{ThemeResource SystemControlAcrylicWindowBrush}">
            <TextBlock Text="Visual Tree" FontWeight="SemiBold" Margin="12,12,12,4" />
            <controls:TreeView x:Name="Tree" Margin="8" ItemsSource="{Binding Nodes, ElementName=Self}">
                <controls:TreeView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}" />
                    </DataTemplate>
                </controls:TreeView.ItemTemplate>
            </controls:TreeView>
        </StackPanel>

        <!-- Right: Details panel -->
        <controls1:DetailsPanel x:Name="Details" Grid.Column="1" />

        <!-- Topmost highlight/picker surface -->
        <Canvas x:Name="HighlightCanvas" IsHitTestVisible="True" />
    </Grid>
</UserControl>