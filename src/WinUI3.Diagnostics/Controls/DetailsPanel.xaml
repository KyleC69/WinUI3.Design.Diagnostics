<UserControl
    x:Class="WinUI3.Diagnostics.Controls.DetailsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:TabView>
            <controls:TabViewItem Header="Element">
                <StackPanel Padding="12" Spacing="8">
                    <TextBlock Text="{Binding ElementHeader, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                    <TextBlock Text="{Binding DataContextType, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                    <Button Content="Highlight" Click="OnHighlightClick" />
                </StackPanel>
            </controls:TabViewItem>
            <controls:TabViewItem Header="Style">
                <StackPanel Padding="12" Spacing="8">
                    <TextBlock x:Name="StyleSummary" />
                </StackPanel>
            </controls:TabViewItem>
            <controls:TabViewItem Header="Resources">
                <StackPanel Padding="12" Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox x:Name="ResourceKeyBox" Width="240" PlaceholderText="Resource key..." />
                        <Button Content="Trace" Click="OnTraceClick" />
                    </StackPanel>
                    <ListView x:Name="TraceList" />
                    <TextBlock x:Name="WinnerText" FontWeight="SemiBold" />
                </StackPanel>
            </controls:TabViewItem>
        </controls:TabView>
    </Grid>
</UserControl>